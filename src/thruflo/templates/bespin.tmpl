<%def name="page()" cached="True">
  <!DOCTYPE html PUBLIC
      "-//W3C//DTD XHTML 1.0 Strict//EN"
      "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
  <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
      <link rel="stylesheet" type="text/css"
          href="${static_url('css/reset.css')}"
      />
      <link rel="stylesheet" type="text/css"
          href="${static_url('bespin/BespinEmbedded.css')}"
      />
      <style type="text/css">
        #editor {
          width: 567px;
          height: 348px;
        }
      </style>
    </head>
    <% 
      js_url = static_url('bespin/BespinEmbedded.uncompressed.js')
      base = '/'.join(js_url.split('/')[:5])
    %>
    <body><div id="editor" class="bespin"></div><a id="bespin_base" href="${base}"></a><script type="text/javascript" src="${js_url}"></script></body>
  </html>
</%def>

${self.page()}